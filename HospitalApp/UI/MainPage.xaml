        <Frame 
                x:Name="DoctorsPageUI" 
                Source="/HospitalApp;component/UI/DoctorsPage.xaml" 
                Margin="0, 0, 10, 10" 
                Visibility="Hidden" 
                IsEnabled="False"
                Grid.Column="1"/>

        <Frame 
                x:Name="PatientsPageUI" 
                Source="/HospitalApp;component/UI/PatientsPage.xaml" 
                Margin="0, 0, 10, 10" 
                Visibility="Hidden" 
                IsEnabled="False"
                Grid.Column="1"/>

